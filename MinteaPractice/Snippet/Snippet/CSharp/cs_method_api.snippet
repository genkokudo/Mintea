            //    { "city", "130010" }
            //};

            //foreach (var item in parameters)
            //{
            //    url = $"{url}?{item.Key}={item.Value}";
            //}

            string json = new HttpClient().GetStringAsync(url).Result;
            return json;
        }]]></Code>
